#!/bin/bash
# Bash completion for swift-clean
# Cleans Swift project build artifacts and caches

_swift_clean_completion() {
  local cur prev opts
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"

  # Options
  opts="--all --deep --dry-run --derived-data --spm-cache --help -h"

  # Path completion for first argument
  if [[ ${COMP_CWORD} == 1 && ${cur} != -* ]]; then
    COMPREPLY=( $(compgen -d -- ${cur}) )
    return 0
  fi

  # Option completion
  if [[ ${cur} == -* ]]; then
    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
  fi
}

complete -F _swift_clean_completion swift-clean
