#!/bin/bash
# Bash completion for swift-deps
# Manages Swift Package Manager dependencies

_swift_deps_completion() {
  local cur prev opts commands
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"

  # Commands
  commands="update resolve show outdated clean reset"

  # Options
  opts="--help -h"

  # Complete command for first argument
  if [[ ${COMP_CWORD} == 1 ]]; then
    COMPREPLY=( $(compgen -W "${commands} ${opts}" -- ${cur}) )
    return 0
  fi

  # Path completion for second argument (except for update with package name)
  if [[ ${COMP_CWORD} == 2 && ${cur} != -* ]]; then
    COMPREPLY=( $(compgen -d -- ${cur}) )
    return 0
  fi

  # Option completion
  if [[ ${cur} == -* ]]; then
    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
  fi
}

complete -F _swift_deps_completion swift-deps
