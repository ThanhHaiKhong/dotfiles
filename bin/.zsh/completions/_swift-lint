#compdef swift-lint

# Zsh completion for swift-lint
# Lints Swift code with SwiftLint

_swift-lint() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments -C \
    '1:project path:_files -/' \
    '--fix[Automatically fix violations]' \
    '--strict[Treat warnings as errors]' \
    '--only-rule[Lint only specific rule]:rule:' \
    '--reporter[Output format]:reporter:(xcode json csv checkstyle codeclimate junit html emoji sonarqube markdown github-actions-logging)' \
    '--config[Custom configuration file]:config file:_files' \
    '--quiet[Only show errors]' \
    '-q[Only show errors]' \
    '--verbose[Show detailed output]' \
    '-v[Show detailed output]' \
    '--help[Show help message]' \
    '-h[Show help message]'
}

